<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/itemImg"
        android:contentDescription="picture of item"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/titleText"
        android:layout_alignTop="@+id/itemImg"
        android:layout_toRightOf="@+id/itemImg"
        android:layout_toEndOf="@+id/itemImg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/priceText"
        android:layout_alignStart="@+id/titleText"
        android:layout_toRightOf="@+id/itemImg"
        android:layout_below="@+id/titleText"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/locationText"
        android:layout_toEndOf="@+id/itemImg"
        android:layout_alignBottom="@+id/itemImg"
        android:layout_alignLeft="@+id/priceText"
        android:layout_alignStart="@+id/priceText" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:id="@+id/marketLogo"
        android:layout_alignBottom="@+id/itemImg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buy"
        android:id="@+id/buybut"
        android:layout_above="@+id/marketLogo"
        android:layout_alignRight="@+id/marketLogo"
        android:layout_alignEnd="@+id/marketLogo"
        android:layout_alignLeft="@+id/marketLogo" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/newBut"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/closesign" />

</RelativeLayout>